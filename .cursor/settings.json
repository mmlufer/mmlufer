{
  "editor": {
    "formatOnSave": true,
    "tabSize": 2,
    "rulers": [
      80,
      100
    ],
    "bracketPairColorization": true
  },
  "ai": {
    "enableInlineCompletion": true,
    "enableAutoCompletion": true,
    "contextualHelp": true,
    "codeAnalysis": true
  },
  "files": {
    "exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "**/__pycache__": true,
      "**/node_modules": true
    }
  },
  "terminal": {
    "integrated": {
      "defaultProfile": {
        "windows": "PowerShell",
        "linux": "bash",
        "osx": "zsh"
      }
    }
  }
}
